<UserControl x:Class="MMG.Views.ResponseSchemaTabs"
             x:Name="ResponseTabsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MMG"
             xmlns:models="clr-namespace:MMG.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="400">
    <TabControl Style="{x:Null}">
        <!-- Response Headers Tab -->
        <TabItem Header="Headers"
                 Style="{StaticResource ModernTabItem}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal">
                    <Button Content="Add Header"
                            Command="{Binding AddResponseHeaderCommand}"
                            Style="{StaticResource ModernButton}"
                            Width="80"
                            Height="30"/>
                    <TextBlock Text="{Binding ResponseHeaderBytesText}"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               Foreground="#007ACC"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding ResponseSchema.Headers}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Name"
                                                Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"
                                               Style="{StaticResource DataGridTextBlockStyle}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource DataGridTextBoxStyle}"
                                             BorderThickness="0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Type"
                                                Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox SelectedItem="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource ModernComboBox}"
                                              BorderThickness="0">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="models:DataType">
                                                <models:DataType>Byte</models:DataType>
                                                <models:DataType>UInt16</models:DataType>
                                                <models:DataType>Int</models:DataType>
                                                <models:DataType>UInt</models:DataType>
                                                <models:DataType>Float</models:DataType>
                                                <models:DataType>Padding</models:DataType>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Value"
                                                Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Value}"
                                               Style="{StaticResource DataGridTextBlockStyle}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource DataGridTextBoxStyle}"
                                             BorderThickness="0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header=""
                                                Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✕"
                                            Command="{Binding ElementName=ResponseTabsControl, Path=DataContext.RemoveResponseHeaderCommand}"
                                            CommandParameter="{Binding}"
                                            Background="{StaticResource WarningColor}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Width="25"
                                            Height="25"
                                            FontSize="{DynamicResource text-xs}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>

        <!-- Response Payload Tab -->
        <TabItem Header="Payload"
                 Style="{StaticResource ModernTabItem}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal">
                    <Button Content="Add Field"
                            Command="{Binding AddResponsePayloadFieldCommand}"
                            Style="{StaticResource ModernButton}"
                            Width="80"
                            Height="30"/>
                    <TextBlock Text="{Binding ResponsePayloadBytesText}"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               Foreground="#007ACC"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding ResponseSchema.Payload}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Name"
                                                Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"
                                               Style="{StaticResource DataGridTextBlockStyle}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource DataGridTextBoxStyle}"
                                             BorderThickness="0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Type"
                                                Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox SelectedItem="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource ModernComboBox}"
                                              BorderThickness="0">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="models:DataType">
                                                <models:DataType>Byte</models:DataType>
                                                <models:DataType>UInt16</models:DataType>
                                                <models:DataType>Int</models:DataType>
                                                <models:DataType>UInt</models:DataType>
                                                <models:DataType>Float</models:DataType>
                                                <models:DataType>Padding</models:DataType>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Value"
                                                Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Value}"
                                               Style="{StaticResource DataGridTextBlockStyle}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource DataGridTextBoxStyle}"
                                             BorderThickness="0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header=""
                                                Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✕"
                                            Command="{Binding ElementName=ResponseTabsControl, Path=DataContext.RemoveResponsePayloadFieldCommand}"
                                            CommandParameter="{Binding}"
                                            Background="{StaticResource WarningColor}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Width="25"
                                            Height="25"
                                            FontSize="{DynamicResource text-xs}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
