<UserControl x:Class="MMG.Views.Test.SavedScenariosPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:MMG.Models"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="360"
             Background="{StaticResource PanelBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource SoftAccent}"
                BorderBrush="{StaticResource MutedBorder}"
                BorderThickness="0"
                CornerRadius="10"
                Padding="14,14,14,10"
                Margin="2,2,2,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock  Grid.Column="0"
                            Text="Test"
                            VerticalAlignment="Center"
                            FontSize="{DynamicResource text-sm}"
                            FontWeight="Bold"
                            Foreground="{StaticResource PrimaryColor}"/>

                <Button Grid.Column="1"
                        Content="+"
                        Command="{Binding OpenCreateScenarioDialogCommand}"
                        Width="30"
                        Height="30"
                        FontSize="{DynamicResource text-base}"
                        Style="{StaticResource ModernButton}"
                        ToolTip="ìƒˆ ì‹œë‚˜ë¦¬ì˜¤ ìƒì„±"/>
            </Grid>
        </Border>

        <!-- Scenarios List -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Scenarios}"
                 SelectedItem="{Binding SelectedScenario}"
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 Padding="8,0,8,6"
                 HorizontalContentAlignment="Stretch"
                 x:Name="ScenariosListBox">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch"/>
                    <Setter Property="Padding"
                            Value="0"/>
                    <Setter Property="Margin"
                            Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:TestScenario}">
                    <Border Style="{StaticResource ScenarioListItem}">
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="ì‚­ì œ"
                                          Command="{Binding DataContext.DeleteScenarioCommand, Source={x:Reference ScenariosListBox}}"
                                          CommandParameter="{Binding}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ—‘ï¸"
                                                   FontSize="12"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Border.ContextMenu>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- ì‹œë‚˜ë¦¬ì˜¤ ì´ë¦„ (ì½ê¸° ëª¨ë“œ) -->
                            <TextBlock Grid.Row="0"
                                       Text="{Binding Name}"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#2C3E50"
                                       TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility"
                                                Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditing}"
                                                         Value="True">
                                                <Setter Property="Visibility"
                                                        Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <TextBlock.InputBindings>
                                    <MouseBinding MouseAction="LeftDoubleClick"
                                                  Command="{Binding DataContext.RenameScenarioCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"/>
                                </TextBlock.InputBindings>
                            </TextBlock>

                            <!-- ì‹œë‚˜ë¦¬ì˜¤ ì´ë¦„ (íŽ¸ì§‘ ëª¨ë“œ) -->
                            <TextBox Grid.Row="0"
                                     Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     FontWeight="SemiBold"
                                     FontSize="14"
                                     BorderThickness="1"
                                     BorderBrush="#007BFF"
                                     Padding="4,2">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditing}"
                                                         Value="True">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter"
                                                Command="{Binding DataContext.SaveScenarioRenameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                    <KeyBinding Key="Escape"
                                                Command="{Binding DataContext.CancelScenarioRenameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                </TextBox.InputBindings>
                            </TextBox>

                            <!-- ìƒíƒœ ì •ë³´ -->
                            <StackPanel Grid.Row="1"
                                        Orientation="Horizontal"
                                        Margin="0,6,0,0">
                                <TextBlock Text="{Binding StatusText}"
                                           FontSize="11"
                                           Foreground="#6C757D"/>
                                <Rectangle Width="4"
                                           Height="4"
                                           VerticalAlignment="Center"
                                           Margin="8,0"
                                           Fill="#6C757D"
                                           RadiusX="2"
                                           RadiusY="2"/>
                                <TextBlock Text="{Binding TestSteps.Count, StringFormat='{}{0}ê°œ ë‹¨ê³„'}"
                                           FontSize="11"
                                           Foreground="#6C757D"/>
                            </StackPanel>

                            <!-- ì§„í–‰ë¥  í‘œì‹œ -->
                            <ProgressBar Grid.Row="2"
                                         Value="{Binding Progress}"
                                         Maximum="100"
                                         Height="3"
                                         Margin="0,6,0,0"
                                         Background="#E9ECEF"
                                         Foreground="#007BFF"
                                         BorderThickness="0">
                                <ProgressBar.Style>
                                    <Style TargetType="ProgressBar">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRunning}"
                                                         Value="True">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ProgressBar.Style>
                            </ProgressBar>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>