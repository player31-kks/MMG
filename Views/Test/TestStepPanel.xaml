<UserControl x:Class="MMG.Views.Test.TestStepPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:MMG.Models"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="400"
             Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Style="{StaticResource PanelHeader}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="테스트 단계"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                    <TextBlock Text="{Binding SelectedScenario.Name, StringFormat='시나리오: {0}'}"
                               FontSize="12"
                               Foreground="#6C757D"
                               Margin="0,2,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility"
                                        Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedScenario}"
                                            Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedScenario}"
                                            Value="{x:Null}">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1"
                        Orientation="Horizontal">
                    <Button Content="+"
                            Command="{Binding AddTestStepCommand}"
                            Width="32"
                            Height="32"
                            FontSize="16"
                            Style="{StaticResource ModernButton}"
                            Background="#28A745"
                            ToolTip="새 테스트 단계 추가"
                            Margin="0,0,8,0"/>
                    <Button Content="▶"
                            Command="{Binding RunSelectedScenarioCommand}"
                            Width="32"
                            Height="32"
                            FontSize="14"
                            Style="{StaticResource ModernButton}"
                            Background="#007BFF"
                            ToolTip="시나리오 실행"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Test Steps List -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="20">
            <ItemsControl ItemsSource="{Binding SelectedScenario.TestSteps}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:TestStep}">
                        <Border Style="{StaticResource TestStepBorder}">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Step Header -->
                                <Grid Grid.Row="0"
                                        Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Style="{StaticResource StepNumberBadge}">
                                        <TextBlock Text="{Binding StepNumber}"
                                                   Foreground="White"
                                                   FontSize="11"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Name}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#2C3E50"
                                               VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="2"
                                            Orientation="Horizontal">
                                        <Button Content="▶"
                                                Command="{Binding DataContext.RunTestStepCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Width="24"
                                                Height="24"
                                                FontSize="10"
                                                Style="{StaticResource ModernButton}"
                                                Background="#28A745"
                                                Margin="0,0,4,0"
                                                ToolTip="이 단계만 실행"/>
                                        <Button Content="🗑"
                                                Command="{Binding DataContext.DeleteTestStepCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Width="24"
                                                Height="24"
                                                FontSize="10"
                                                Style="{StaticResource ModernButton}"
                                                Background="#DC3545"
                                                ToolTip="단계 삭제"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Request Details -->
                                <Grid Grid.Row="1"
                                        Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                            Grid.Column="0"
                                               Text="요청:"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#495057"
                                               Margin="0,0,8,4"/>
                                    <TextBlock Grid.Row="0"
                                            Grid.Column="1"
                                               Text="{Binding Request.RequestData}"
                                               FontSize="12"
                                               Foreground="#6C757D"
                                               TextWrapping="Wrap"
                                               MaxHeight="60"
                                               Margin="0,0,0,4"/>

                                    <TextBlock Grid.Row="1"
                                            Grid.Column="0"
                                               Text="대상:"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#495057"
                                               Margin="0,0,8,4"/>
                                    <TextBlock Grid.Row="1"
                                            Grid.Column="1"
                                               FontSize="12"
                                               Foreground="#6C757D"
                                               Margin="0,0,0,4">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0}:{1}">
                                                <Binding Path="Request.IPAddress"/>
                                                <Binding Path="Request.Port"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>

                                    <TextBlock Grid.Row="2"
                                            Grid.Column="0"
                                               Text="예상:"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#495057"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Grid.Row="2"
                                            Grid.Column="1"
                                               Text="{Binding ExpectedResponse}"
                                               FontSize="12"
                                               Foreground="#6C757D"
                                               TextWrapping="Wrap"
                                               MaxHeight="40"/>
                                </Grid>

                                <!-- Last Result -->
                                <Border Grid.Row="2"
                                        Background="#F8F9FA"
                                        BorderBrush="#E9ECEF"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="10"
                                        Margin="0,0,0,8">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LastResult}"
                                                        Value="{x:Null}">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,4">
                                            <TextBlock Text="결과:"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="#495057"
                                                       Margin="0,0,8,0"/>
                                            <TextBlock FontSize="11"
                                                    FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text"
                                                                Value="성공"/>
                                                        <Setter Property="Foreground"
                                                                Value="#28A745"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding LastResult.IsSuccess}"
                                                                    Value="False">
                                                                <Setter Property="Text"
                                                                        Value="실패"/>
                                                                <Setter Property="Foreground"
                                                                        Value="#DC3545"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding LastResult.ExecutionTime, StringFormat=F2}"
                                                       FontSize="11"
                                                       Foreground="#6C757D"
                                                       Margin="8,0,0,0"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding LastResult.Message}"
                                                   FontSize="11"
                                                   Foreground="#6C757D"
                                                   TextWrapping="Wrap"
                                                   MaxHeight="60"/>
                                    </Grid>
                                </Border>

                                <!-- Progress indicator for running steps -->
                                <ProgressBar Grid.Row="3"
                                             IsIndeterminate="True"
                                             Height="2"
                                             Background="Transparent"
                                             Foreground="#FFC107"
                                             BorderThickness="0">
                                    <ProgressBar.Style>
                                        <Style TargetType="ProgressBar">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRunning}"
                                                        Value="True">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ProgressBar.Style>
                                </ProgressBar>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility"
                            Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedScenario.TestSteps.Count}"
                                Value="0">
                            <Setter Property="Visibility"
                                    Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding SelectedScenario}"
                                Value="{x:Null}">
                            <Setter Property="Visibility"
                                    Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <TextBlock Text="📋"
                       FontSize="48"
                       HorizontalAlignment="Center"
                       Opacity="0.3"
                       Margin="0,0,0,16"/>
            <TextBlock Text="테스트 단계가 없습니다"
                       FontSize="16"
                       Foreground="#6C757D"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>
            <TextBlock Text="+ 버튼을 클릭하여 새 단계를 추가하세요"
                       FontSize="12"
                       Foreground="#ADB5BD"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2"
                Style="{StaticResource PanelFooter}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                        Orientation="Horizontal">
                    <TextBlock Text="총"
                               FontSize="12"
                               Foreground="#6C757D"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedScenario.TestSteps.Count}"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#495057"
                               Margin="4,0"/>
                    <TextBlock Text="개 단계"
                               FontSize="12"
                               Foreground="#6C757D"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="전체 실행"
                        Command="{Binding RunSelectedScenarioCommand}"
                        Style="{StaticResource ModernButton}"
                        Background="#007BFF"
                        Padding="16,8"
                        FontSize="12"
                        FontWeight="SemiBold"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>