                                </Border>

                                <!-- Progress indicator for running steps -->
                                <ProgressBar Grid.Row="3"
                                             IsIndeterminate="True"
                                             Height="2"
                                             Background="Transparent"
                                             Foreground="#FFC107"
                                             BorderThickness="0">
                                    <ProgressBar.Style>
                                        <Style TargetType="ProgressBar">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRunning}"
                                                             Value="True">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
