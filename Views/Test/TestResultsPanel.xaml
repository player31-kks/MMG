<UserControl x:Class="MMG.Views.Test.TestResultsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:MMG.Models"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="350"
             Background="#F8F9FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Style="{StaticResource PanelHeader}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="ì‹¤í–‰ ê²°ê³¼"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                    <TextBlock Text="í…ŒìŠ¤íŠ¸ ì‹¤í–‰ ê²°ê³¼ ë° í†µê³„"
                               FontSize="12"
                               Foreground="#6C757D"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="ðŸ“Š"
                        Command="{Binding OpenDetailedResultsCommand}"
                        Width="32"
                        Height="32"
                        FontSize="16"
                        Style="{StaticResource ModernButton}"
                        Background="#17A2B8"
                        ToolTip="ìƒì„¸ ê²°ê³¼ ë³´ê¸°"/>
            </Grid>
        </Border>

        <!-- Results Summary -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="20">
            <StackPanel>

                <!-- Overall Statistics -->
                <Border Background="White"
                        BorderBrush="#DEE2E6"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="16"
                        Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="ì „ì²´ í†µê³„"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,12"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                    Grid.Column="0"
                                       Text="ì´ ì‹œë‚˜ë¦¬ì˜¤:"
                                       FontSize="12"
                                       Foreground="#6C757D"/>
                            <TextBlock Grid.Row="0"
                                    Grid.Column="1"
                                       Text="{Binding TotalScenarios}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#495057"
                                       HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="1"
                                    Grid.Column="0"
                                       Text="ì„±ê³µ:"
                                       FontSize="12"
                                       Foreground="#6C757D"/>
                            <TextBlock Grid.Row="1"
                                    Grid.Column="1"
                                       Text="{Binding SuccessfulTests}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#28A745"
                                       HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="2"
                                    Grid.Column="0"
                                       Text="ì‹¤íŒ¨:"
                                       FontSize="12"
                                       Foreground="#6C757D"/>
                            <TextBlock Grid.Row="2"
                                    Grid.Column="1"
                                       Text="{Binding FailedTests}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#DC3545"
                                       HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="3"
                                    Grid.Column="0"
                                       Text="ì„±ê³µë¥ :"
                                       FontSize="12"
                                       Foreground="#6C757D"/>
                            <TextBlock Grid.Row="3"
                                    Grid.Column="1"
                                       Text="{Binding SuccessRate, StringFormat=N1}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Right"
                                       Foreground="#28A745"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Recent Results -->
                <Border Background="White"
                        BorderBrush="#DEE2E6"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="ìµœê·¼ ê²°ê³¼"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,12"/>

                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding RecentResults}"
                                      MaxHeight="200">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:TestResult}">
                                    <Border Background="#F8F9FA"
                                            BorderBrush="#E9ECEF"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="10"
                                            Margin="0,0,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Grid.Column="0"
                                                     Width="8"
                                                     Height="8"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,8,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill"
                                                                Value="#28A745"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsSuccess}"
                                                                    Value="False">
                                                                <Setter Property="Fill"
                                                                        Value="#DC3545"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding ScenarioName}"
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2C3E50"/>
                                                <TextBlock Text="{Binding Message}"
                                                           FontSize="10"
                                                           Foreground="#6C757D"
                                                           TextWrapping="Wrap"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding ExecutionTime, StringFormat=F0}"
                                                       FontSize="10"
                                                       Foreground="#6C757D"
                                                       VerticalAlignment="Top"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Style="{StaticResource PanelFooter}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding LastUpdateTime, StringFormat=T}"
                           FontSize="11"
                           Foreground="#6C757D"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="ìƒˆë¡œê³ ì¹¨"
                        Command="{Binding RefreshResultsCommand}"
                        Style="{StaticResource ModernButton}"
                        Background="#6C757D"
                        Padding="12,6"
                        FontSize="11"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>