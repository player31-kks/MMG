<UserControl x:Class="MMG.Views.SavedRequestsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MMG"
             xmlns:models="clr-namespace:MMG.Models"
             xmlns:converters="clr-namespace:MMG.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="300">
    <UserControl.Resources>
        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="DropShadow" 
                          BlurRadius="12" 
                          ShadowDepth="4" 
                          Direction="315" 
                          Color="#80000000" 
                          Opacity="0.3"/>
        
        <!-- 폴더용 컨텍스트 메뉴 -->
        <ContextMenu x:Key="FolderContextMenu">
            <MenuItem Header="새 폴더" Command="{Binding NewFolderCommand}">
                <MenuItem.Icon>
                    <TextBlock Text="📁" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="새 요청" Command="{Binding NewRequestCommand}">
                <MenuItem.Icon>
                    <TextBlock Text="📃" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="이름 변경" 
                      Command="{Binding RenameItemCommand}" 
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Icon>
                    <TextBlock Text="✏️" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="삭제" 
                      Command="{Binding DeleteItemCommand}" 
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Icon>
                    <TextBlock Text="🗑️" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
        
        <!-- 요청 파일용 컨텍스트 메뉴 -->
        <ContextMenu x:Key="RequestContextMenu">
            <MenuItem Header="이름 변경" 
                      Command="{Binding RenameItemCommand}" 
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Icon>
                    <TextBlock Text="✏️" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="삭제" 
                      Command="{Binding DeleteItemCommand}" 
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Icon>
                    <TextBlock Text="🗑️" FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </UserControl.Resources>
    
    <Border Background="White"
            BorderBrush="#DDDDDD"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#F8F9FA"
                    BorderBrush="#DDDDDD"
                    BorderThickness="0,0,0,1"
                    Padding="15,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Saved Requests"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                    <!-- + 버튼 with Dropdown -->
                    <Grid Grid.Column="1" x:Name="AddButtonContainer">
                        <Button x:Name="AddButton"
                                Content="+"
                                Style="{StaticResource ModernButton}"
                                Width="30"
                                Height="25"
                                FontSize="16"
                                FontWeight="Bold"
                                Background="#2196F3"
                                Foreground="White"
                                BorderBrush="#1976D2"
                                ToolTip="새로 추가"
                                MouseEnter="AddButton_MouseEnter"
                                MouseLeave="AddButton_MouseLeave"/>

                        <Popup x:Name="AddPopup"
                               PlacementTarget="{Binding ElementName=AddButton}"
                               Placement="Bottom"
                               StaysOpen="False"
                               AllowsTransparency="True"
                               MouseEnter="AddPopup_MouseEnter"
                               MouseLeave="AddPopup_MouseLeave">
                            <Border Background="White"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Effect="{StaticResource DropShadow}">
                                <StackPanel Margin="2">
                                    <Button Content="📁 New Folder"
                                            Command="{Binding NewFolderCommand}"
                                            HorizontalContentAlignment="Left"
                                            Padding="10,8"
                                            MinWidth="120"
                                            FontSize="12"
                                            Foreground="Black"
                                            Click="PopupButton_Click">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                        <Setter Property="Foreground" Value="Black"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    
                                    <Separator Margin="5,2"/>
                                    
                                    <Button Content="📃 New Request"
                                            Command="{Binding NewRequestCommand}"
                                            HorizontalContentAlignment="Left"
                                            Padding="10,8"
                                            MinWidth="120"
                                            FontSize="12"
                                            Foreground="Black"
                                            Click="PopupButton_Click">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                        <Setter Property="Foreground" Value="Black"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </Grid>
                </Grid>
            </Border>

            <!-- Tree View -->
            <TreeView Grid.Row="1"
                      x:Name="RequestTreeView"
                      ItemsSource="{Binding TreeItems}"
                      Margin="10"
                      BorderThickness="0"
                      Background="Transparent"
                      SelectedItemChanged="TreeView_SelectedItemChanged">
                <!-- 빈 영역을 위한 기본 컨텍스트 메뉴 -->
                <TreeView.ContextMenu>
                    <ContextMenu x:Name="EmptyAreaContextMenu">
                        <MenuItem Header="새 폴더" Command="{Binding NewFolderCommand}">
                            <MenuItem.Icon>
                                <TextBlock Text="📁" FontSize="12"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="새 요청" Command="{Binding NewRequestCommand}">
                            <MenuItem.Icon>
                                <TextBlock Text="📃" FontSize="12"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </TreeView.ContextMenu>
                
                <TreeView.Resources>
                    <!-- TreeView Item Template -->
                    <HierarchicalDataTemplate DataType="{x:Type models:TreeViewItemModel}" ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <!-- 폴더 아이콘 -->
                            <TextBlock Text="📁" FontSize="14" Margin="0,0,5,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ItemType}" Value="Folder">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <!-- 요청 아이콘 (📃으로 변경) -->
                            <TextBlock Text="📃" FontSize="12" Margin="0,0,5,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ItemType}" Value="Request">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <!-- 이름 표시/편집 -->
                            <Grid>
                                <!-- 일반 텍스트 표시 -->
                                <TextBlock Text="{Binding Name}" FontSize="13" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#555555"/>
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ItemType}" Value="Folder">
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                    <Setter Property="Foreground" Value="#333333"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                
                                <!-- 편집용 텍스트박스 -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                             FontSize="12" 
                                             Width="120" 
                                             Height="20"
                                             VerticalAlignment="Center"
                                             x:Name="EditTextBox"
                                             KeyDown="EditTextBox_KeyDown"/>
                                    
                                    <Button Content="✓" 
                                            Command="{Binding DataContext.SaveRenameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Width="20" 
                                            Height="20" 
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Background="#4CAF50"
                                            Foreground="White"
                                            BorderThickness="0"
                                            ToolTip="저장"/>
                                    
                                    <Button Content="✗" 
                                            Command="{Binding DataContext.CancelRenameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Width="20" 
                                            Height="20" 
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Background="#F44336"
                                            Foreground="White"
                                            BorderThickness="0"
                                            ToolTip="취소"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
                
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="2"/>
                        <EventSetter Event="MouseDoubleClick" Handler="TreeViewItem_MouseDoubleClick"/>
                        <EventSetter Event="PreviewMouseRightButtonDown" Handler="TreeViewItem_RightClick"/>
                        <EventSetter Event="Loaded" Handler="TreeViewItem_Loaded"/>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>


        </Grid>
    </Border>
</UserControl>