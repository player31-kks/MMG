<UserControl x:Class="MMG.Views.RequestSchemaTabs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MMG"
             xmlns:models="clr-namespace:MMG.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400"
        d:DesignWidth="400">
    <TabControl Style="{x:Null}">
        <!-- Headers Tab -->
        <TabItem Header="Headers"
                Style="{StaticResource ModernTabItem}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="0,0,0,10">
                    <Button Content="Add Header"
                            Command="{Binding AddHeaderCommand}"
                            Style="{StaticResource ModernButton}"
                            HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding HeaderBytesText}"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               Foreground="#007ACC"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding CurrentRequest.Headers}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"
                                Binding="{Binding Name}"
                                Width="*"/>
                        <DataGridTemplateColumn Header="Type"
                                Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox SelectedItem="{Binding Type}"
                                              Style="{StaticResource ModernComboBox}"
                                              BorderThickness="0">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="models:DataType">
                                                <models:DataType>Byte</models:DataType>
                                                <models:DataType>UInt16</models:DataType>
                                                <models:DataType>Int</models:DataType>
                                                <models:DataType>UInt</models:DataType>
                                                <models:DataType>Float</models:DataType>
                                                <models:DataType>Padding</models:DataType>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Value"
                                Binding="{Binding Value}"
                                Width="*"/>
                        <DataGridTemplateColumn Header=""
                                Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✕"
                                            Command="{Binding DataContext.RemoveHeaderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Background="#FF4444"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Width="25"
                                            Height="25"
                                            FontSize="12"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>

        <!-- Payload Tab -->
        <TabItem Header="Payload"
                Style="{StaticResource ModernTabItem}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Margin="0,0,0,10">
                    <Button Content="Add Field"
                            Command="{Binding AddPayloadFieldCommand}"
                            Style="{StaticResource ModernButton}"
                            HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding PayloadBytesText}"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               Foreground="#007ACC"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding CurrentRequest.Payload}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"
                                Binding="{Binding Name}"
                                Width="*"/>
                        <DataGridTemplateColumn Header="Type"
                                Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox SelectedItem="{Binding Type}"
                                              Style="{StaticResource ModernComboBox}"
                                              BorderThickness="0">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="models:DataType">
                                                <models:DataType>Byte</models:DataType>
                                                <models:DataType>UInt16</models:DataType>
                                                <models:DataType>Int</models:DataType>
                                                <models:DataType>UInt</models:DataType>
                                                <models:DataType>Float</models:DataType>
                                                <models:DataType>Padding</models:DataType>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Value"
                                Binding="{Binding Value}"
                                Width="*"/>
                        <DataGridTemplateColumn Header=""
                                Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✕"
                                            Command="{Binding DataContext.RemovePayloadFieldCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Background="#FF4444"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Width="25"
                                            Height="25"
                                            FontSize="12"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
