<UserControl x:Class="MMG.Views.Spec.SpecContentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:MMG.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1200"
             Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="#F8F9FA"
                BorderBrush="#E9ECEF"
                BorderThickness="0,0,0,1"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Buttons -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal">
                    <Button Content="ðŸ“„ ìƒˆ ìŠ¤íŽ™"
                            Command="{Binding NewSpecCommand}"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="ðŸ“¥ ê°€ì ¸ì˜¤ê¸°"
                            Command="{Binding ImportSpecCommand}"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="ðŸ“¤ ë‚´ë³´ë‚´ê¸°"
                            Command="{Binding ExportSpecCommand}"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Margin="0,0,5,0"/>
                    <Button Content="ðŸ’¾ ì €ìž¥"
                            Command="{Binding SaveSpecCommand}"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Margin="0,0,15,0"/>
                    <Button Content="ðŸ”„ YAML ì ìš©"
                            Command="{Binding RefreshFromYamlCommand}"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Margin="0,0,15,0"/>

                    <!-- View Toggle -->
                    <Border Background="#DEE2E6"
                            CornerRadius="4"
                            Padding="2">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="EditorViewRadio"
                                         Content="âœï¸ íŽ¸ì§‘ê¸°"
                                         IsChecked="True"
                                         Style="{StaticResource ViewToggleRadioStyle}"
                                         Margin="0,0,2,0"/>
                            <RadioButton x:Name="DocViewRadio"
                                         Content="ðŸ“– ë¬¸ì„œ"
                                         Style="{StaticResource ViewToggleRadioStyle}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Spec Info -->
                <TextBlock Grid.Column="1"
                           Text="{Binding SpecInfo}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           Foreground="#495057"/>

                <!-- Status -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal">
                    <TextBlock Text="{Binding StatusMessage}"
                               VerticalAlignment="Center"
                               Foreground="#6C757D"
                               Margin="0,0,10,0"/>
                    <Ellipse Width="8"
                             Height="8"
                             VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill"
                                        Value="#28A745"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasUnsavedChanges}"
                                                 Value="True">
                                        <Setter Property="Fill"
                                                Value="#FFC107"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Editor View -->
            <Grid Visibility="{Binding ElementName=EditorViewRadio, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"
                                      MinWidth="200"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Messages List -->
                <Border Grid.Column="0"
                        Background="#F8F9FA"
                        BorderBrush="#E9ECEF"
                        BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Messages Header -->
                        <Border Grid.Row="0"
                                Background="#E9ECEF"
                                Padding="10">
                            <TextBlock Text="ë©”ì‹œì§€ ëª©ë¡"
                                       FontWeight="SemiBold"
                                       FontSize="14"/>
                        </Border>

                        <!-- Messages List -->
                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding Messages}"
                                 SelectedItem="{Binding SelectedMessage}"
                                 BorderThickness="0"
                                 Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10,8"
                                            Background="Transparent"
                                            BorderBrush="#DEE2E6"
                                            BorderThickness="0,0,0,1">
                                        <StackPanel>
                                            <TextBlock Text="{Binding MessageId}"
                                                       FontWeight="SemiBold"
                                                       FontSize="13"/>
                                            <TextBlock Text="{Binding Description}"
                                                       Foreground="#6C757D"
                                                       FontSize="11"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,4,0,0">
                                                <Border Background="#E3F2FD"
                                                        CornerRadius="3"
                                                        Padding="5,2"
                                                        Margin="0,0,5,0">
                                                    <TextBlock FontSize="10"
                                                               Foreground="#1976D2">
                                                    <Run Text="Headers: "/>
                                                    <Run Text="{Binding HeaderCount}"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Background="#E8F5E9"
                                                        CornerRadius="3"
                                                        Padding="5,2">
                                                    <TextBlock FontSize="10"
                                                               Foreground="#388E3C">
                                                    <Run Text="Payload: "/>
                                                    <Run Text="{Binding PayloadCount}"/>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment"
                                            Value="Stretch"/>
                                    <Setter Property="Padding"
                                            Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected"
                                                             Value="True">
                                                        <Setter Property="Background"
                                                                Value="#E3F2FD"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver"
                                                             Value="True">
                                                        <Setter Property="Background"
                                                                Value="#F5F5F5"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>

                        <!-- Empty State -->
                        <TextBlock Grid.Row="1"
                                   Text="ìŠ¤íŽ™ íŒŒì¼ì„ ë¶ˆëŸ¬ì˜¤ë©´&#x0a;ë©”ì‹œì§€ ëª©ë¡ì´ í‘œì‹œë©ë‹ˆë‹¤"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#ADB5BD"
                                   TextAlignment="Center"
                                   Visibility="{Binding HasSpec, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
                    </Grid>
                </Border>

                <!-- Splitter -->
                <GridSplitter Grid.Column="1"
                              Width="5"
                              HorizontalAlignment="Stretch"
                              Background="#E9ECEF"/>

                <!-- Right Panel - YAML Editor -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- YAML Header -->
                    <Border Grid.Row="0"
                            Background="#2D2D2D"
                            Padding="10">
                        <Grid>
                            <TextBlock Text="YAML ìŠ¤íŽ™ íŽ¸ì§‘ê¸°"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="White"/>
                            <TextBlock Text="{Binding CurrentFilePath}"
                                       HorizontalAlignment="Right"
                                       Foreground="#888888"
                                       FontSize="11"/>
                        </Grid>
                    </Border>

                    <!-- YAML Editor -->
                    <TextBox Grid.Row="1"
                             Text="{Binding SpecYamlContent, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             TextWrapping="NoWrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="13"
                             Background="#1E1E1E"
                             Foreground="#D4D4D4"
                             CaretBrush="White"
                             BorderThickness="0"
                             Padding="15"/>
                </Grid>
            </Grid>

            <!-- Document View -->
            <Grid Visibility="{Binding ElementName=DocViewRadio, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                <WebBrowser x:Name="DocBrowser"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
