<UserControl x:Class="MMG.Views.ResponsePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MMG"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="400">
    <Border Background="White"
            BorderBrush="#DDDDDD"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Response Header -->
            <Border Grid.Row="0"
                    Background="#F8F9FA"
                    BorderBrush="#DDDDDD"
                    BorderThickness="0,0,0,1"
                    Padding="15">
                <TextBlock Text="Response"
                           FontSize="{DynamicResource text-sm}"
                           FontWeight="Bold"/>
            </Border>

            <!-- Response Content -->
            <ScrollViewer Grid.Row="1"
                          Margin="20"
                          VerticalScrollBarVisibility="Auto">
                <TextBox Text="{Binding ResponseText, Mode=OneWay}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Background="Transparent"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="{DynamicResource text-xs}"/>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
