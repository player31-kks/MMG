<UserControl x:Class="MMG.Views.API.ResponseSchemaTabs"
             x:Name="ResponseTabsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MMG"
             xmlns:models="clr-namespace:MMG.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="400">
    <TabControl Style="{x:Null}"
                BorderThickness="0,1,0,0">
        <!-- Response Headers Tab -->
        <TabItem Header="Headers"
                 Style="{StaticResource ModernTabItem}"
                 BorderThickness="0,1,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal">
                    <Button Content="Add Header"
                            Command="{Binding AddResponseHeaderCommand}"
                            CommandParameter="{Binding ElementName=ResponseHeadersDataGrid, Path=SelectedIndex}"
                            Style="{StaticResource ModernButton}"
                            Width="80"
                            Height="30"/>
                    <TextBlock Text="{Binding ResponseHeaderBytesText}"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               Foreground="#007ACC"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          x:Name="ResponseHeadersDataGrid"
                          ItemsSource="{Binding ResponseSchema.Headers}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          KeyDown="DataGrid_KeyDown"
                          MouseLeftButtonUp="DataGrid_MouseLeftButtonUp"
                          Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"
                                            Binding="{Binding Name}"
                                            Width="2*"
                                            MinWidth="80"/>
                        <DataGridTemplateColumn Header="Type"
                                                Width="120"
                                                MinWidth="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox SelectedItem="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource ModernComboBox}"
                                              BorderThickness="0">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="models:DataType">
                                                <models:DataType>Byte</models:DataType>
                                                <models:DataType>Int16</models:DataType>
                                                <models:DataType>UInt16</models:DataType>
                                                <models:DataType>Int</models:DataType>
                                                <models:DataType>UInt</models:DataType>
                                                <models:DataType>Float</models:DataType>
                                                <models:DataType>Padding</models:DataType>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Value"
                                            Binding="{Binding Value}"
                                            Width="2*"
                                            MinWidth="80"/>
                        <DataGridTemplateColumn Header=""
                                                Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="⊖"
                                            HorizontalAlignment="Center"
                                            Command="{Binding ElementName=ResponseTabsControl, Path=DataContext.RemoveResponseHeaderCommand}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            Foreground="#9CA3AF"
                                            BorderThickness="0"
                                            Width="24"
                                            Height="24"
                                            FontSize="14"
                                            Cursor="Hand"
                                            ToolTip="삭제">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="12"
                                                                    Width="24"
                                                                    Height="24">
                                                                <TextBlock Text="{TemplateBinding Content}"
                                                                           Foreground="{TemplateBinding Foreground}"
                                                                           FontSize="{TemplateBinding FontSize}"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver"
                                                                         Value="True">
                                                                    <Setter Property="Background"
                                                                            Value="#FEE2E2"/>
                                                                    <Setter Property="Foreground"
                                                                            Value="#EF4444"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Button Content="⊖"
                                            Command="{Binding DataContext.ClearAllResponseHeadersCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Width="24"
                                            Height="24"
                                            Background="Transparent"
                                            Foreground="#9CA3AF"
                                            BorderThickness="0"
                                            FontSize="14"
                                            Cursor="Hand"
                                            ToolTip="전체 삭제">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="12"
                                                                    Width="24"
                                                                    Height="24">
                                                                <TextBlock Text="{TemplateBinding Content}"
                                                                           Foreground="{TemplateBinding Foreground}"
                                                                           FontSize="{TemplateBinding FontSize}"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver"
                                                                         Value="True">
                                                                    <Setter Property="Background"
                                                                            Value="#FEE2E2"/>
                                                                    <Setter Property="Foreground"
                                                                            Value="#EF4444"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>

        <!-- Response Payload Tab -->
        <TabItem Header="Payload"
                 Style="{StaticResource ModernTabItem}"
                 BorderThickness="0,1,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal">
                    <Button Content="Add Field"
                            Command="{Binding AddResponsePayloadFieldCommand}"
                            CommandParameter="{Binding ElementName=ResponsePayloadDataGrid, Path=SelectedIndex}"
                            Style="{StaticResource ModernButton}"
                            Width="80"
                            Height="30"/>
                    <TextBlock Text="{Binding ResponsePayloadBytesText}"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               Foreground="#007ACC"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          x:Name="ResponsePayloadDataGrid"
                          ItemsSource="{Binding ResponseSchema.Payload}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          KeyDown="DataGrid_KeyDown"
                          MouseLeftButtonUp="DataGrid_MouseLeftButtonUp"
                          Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"
                                            Binding="{Binding Name}"
                                            Width="2*"
                                            MinWidth="80"/>
                        <DataGridTemplateColumn Header="Type"
                                                Width="120"
                                                MinWidth="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox SelectedItem="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource ModernComboBox}"
                                              BorderThickness="0">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="models:DataType">
                                                <models:DataType>Byte</models:DataType>
                                                <models:DataType>Int16</models:DataType>
                                                <models:DataType>UInt16</models:DataType>
                                                <models:DataType>Int</models:DataType>
                                                <models:DataType>UInt</models:DataType>
                                                <models:DataType>Float</models:DataType>
                                                <models:DataType>Padding</models:DataType>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Value"
                                            Binding="{Binding Value}"
                                            Width="2*"
                                            MinWidth="80"/>
                        <DataGridTemplateColumn Header=""
                                                Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="⊖"
                                            HorizontalAlignment="Center"
                                            Command="{Binding ElementName=ResponseTabsControl, Path=DataContext.RemoveResponsePayloadFieldCommand}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            Foreground="#9CA3AF"
                                            BorderThickness="0"
                                            Width="24"
                                            Height="24"
                                            FontSize="14"
                                            Cursor="Hand"
                                            ToolTip="삭제">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="12"
                                                                    Width="24"
                                                                    Height="24">
                                                                <TextBlock Text="{TemplateBinding Content}"
                                                                           Foreground="{TemplateBinding Foreground}"
                                                                           FontSize="{TemplateBinding FontSize}"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver"
                                                                         Value="True">
                                                                    <Setter Property="Background"
                                                                            Value="#FEE2E2"/>
                                                                    <Setter Property="Foreground"
                                                                            Value="#EF4444"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Button Content="⊖"
                                            Command="{Binding DataContext.ClearAllResponsePayloadFieldsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Width="24"
                                            Height="24"
                                            Background="Transparent"
                                            Foreground="#9CA3AF"
                                            BorderThickness="0"
                                            FontSize="14"
                                            Cursor="Hand"
                                            ToolTip="전체 삭제">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                    CornerRadius="12"
                                                                    Width="24"
                                                                    Height="24">
                                                                <TextBlock Text="{TemplateBinding Content}"
                                                                           Foreground="{TemplateBinding Foreground}"
                                                                           FontSize="{TemplateBinding FontSize}"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver"
                                                                         Value="True">
                                                                    <Setter Property="Background"
                                                                            Value="#FEE2E2"/>
                                                                    <Setter Property="Foreground"
                                                                            Value="#EF4444"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
