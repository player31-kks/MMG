<UserControl x:Class="MMG.Views.API.SavedRequestsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MMG"
             xmlns:models="clr-namespace:MMG.Models"
             xmlns:converters="clr-namespace:MMG.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="300">
    <UserControl.Resources>
        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="DropShadow"
                          BlurRadius="12"
                          ShadowDepth="4"
                          Direction="315"
                          Color="#80000000"
                          Opacity="0.3"/>

        <!-- í´ë”ìš© ì»¨í…ìŠ¤íŠ¸ ë©”ë‰´ -->
        <ContextMenu x:Key="FolderContextMenu">
            <MenuItem Header="ìƒˆ í´ë”"
                      Command="{Binding NewFolderCommand}">
                <MenuItem.Icon>
                    <TextBlock Text="ðŸ“"
                               FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="ìƒˆ ìš”ì²­"
                      Command="{Binding NewRequestCommand}">
                <MenuItem.Icon>
                    <TextBlock Text="ðŸ“ƒ"
                               FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="ì´ë¦„ ë³€ê²½"
                      Command="{Binding RenameItemCommand}"
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Icon>
                    <TextBlock Text="âœï¸"
                               FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="ì‚­ì œ"
                      Command="{Binding DeleteItemCommand}"
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Icon>
                    <TextBlock Text="ðŸ—‘ï¸"
                               FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <!-- ìš”ì²­ íŒŒì¼ìš© ì»¨í…ìŠ¤íŠ¸ ë©”ë‰´ -->
        <ContextMenu x:Key="RequestContextMenu">
            <MenuItem Header="ì´ë¦„ ë³€ê²½"
                      Command="{Binding RenameItemCommand}"
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Icon>
                    <TextBlock Text="âœï¸"
                               FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="ë³µì‚¬"
                      Command="{Binding CopyItemCommand}"
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Icon>
                    <TextBlock Text="ðŸ“‹"
                               FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="ì‚­ì œ"
                      Command="{Binding DeleteItemCommand}"
                      CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                <MenuItem.Icon>
                    <TextBlock Text="ðŸ—‘ï¸"
                               FontSize="12"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </UserControl.Resources>

    <Grid Background="{StaticResource PanelBackground}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource SoftAccent}"
                    BorderBrush="{StaticResource MutedBorder}"
                    BorderThickness="0"
                    CornerRadius="10"
                    Padding="14,14,14,10"
                    Margin="2,2,2,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="APIs"
                               FontSize="{DynamicResource text-sm}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource PrimaryColor}"/>

                    <!-- + ë²„íŠ¼ with Dropdown -->
                    <Grid Grid.Column="1"
                          x:Name="AddButtonContainer">
                        <Button x:Name="AddButton"
                                Content="+"
                                Style="{StaticResource ModernButton}"
                                Width="30"
                                Height="30"
                                FontSize="20"
                                FontWeight="Bold"
                                ToolTip="ìƒˆë¡œ ì¶”ê°€"
                                MouseEnter="AddButton_MouseEnter"
                                MouseLeave="AddButton_MouseLeave"/>
                        <Popup x:Name="AddPopup"
                               PlacementTarget="{Binding ElementName=AddButton}"
                               Placement="Bottom"
                               StaysOpen="True"
                               AllowsTransparency="True"
                               MouseEnter="AddPopup_MouseEnter"
                               MouseLeave="AddPopup_MouseLeave">
                            <Border Background="White"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Effect="{StaticResource DropShadow}"
                                    MouseEnter="AddPopup_MouseEnter"
                                    MouseLeave="AddPopup_MouseLeave">
                                <StackPanel Margin="2">
                                    <Button Content="ðŸ“ New Folder"
                                            Command="{Binding NewFolderCommand}"
                                            HorizontalContentAlignment="Left"
                                            Padding="10,8"
                                            MinWidth="120"
                                            FontSize="12"
                                            Foreground="Black"
                                            Click="PopupButton_Click">
                                        <Button.Style>
                                            <Style TargetType="Button"
                                                   BasedOn="{StaticResource ModernButton}">
                                                <Setter Property="Background"
                                                        Value="Transparent"/>
                                                <Setter Property="BorderThickness"
                                                        Value="0"/>
                                                <Setter Property="Foreground"
                                                        Value="Black"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver"
                                                             Value="True">
                                                        <Setter Property="Background"
                                                                Value="#F0F0F0"/>
                                                        <Setter Property="Foreground"
                                                                Value="Black"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Separator Margin="5,2"/>

                                    <Button Content="ðŸ“ƒ New Request"
                                            Command="{Binding NewRequestCommand}"
                                            HorizontalContentAlignment="Left"
                                            Padding="10,8"
                                            MinWidth="120"
                                            FontSize="12"
                                            Foreground="Black"
                                            Click="PopupButton_Click">
                                        <Button.Style>
                                            <Style TargetType="Button"
                                                   BasedOn="{StaticResource ModernButton}">
                                                <Setter Property="Background"
                                                        Value="Transparent"/>
                                                <Setter Property="BorderThickness"
                                                        Value="0"/>
                                                <Setter Property="Foreground"
                                                        Value="Black"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver"
                                                             Value="True">
                                                        <Setter Property="Background"
                                                                Value="#F0F0F0"/>
                                                        <Setter Property="Foreground"
                                                                Value="Black"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </Grid>
                </Grid>
            </Border>

            <!-- Tree View -->
            <TreeView Grid.Row="1"
                      x:Name="RequestTreeView"
                      ItemsSource="{Binding TreeItems}"
                      Margin="6,0,6,6"
                      BorderThickness="0"
                      Background="Transparent"
                      Focusable="True"
                      AllowDrop="True"
                      SelectedItemChanged="TreeView_SelectedItemChanged"
                      KeyDown="TreeView_KeyDown"
                      Drop="TreeView_Drop">
                <!-- ë¹ˆ ì˜ì—­ì„ ìœ„í•œ ê¸°ë³¸ ì»¨í…ìŠ¤íŠ¸ ë©”ë‰´ -->
                <TreeView.ContextMenu>
                    <ContextMenu x:Name="EmptyAreaContextMenu">
                        <MenuItem Header="ìƒˆ í´ë”"
                                  Command="{Binding NewFolderCommand}">
                            <MenuItem.Icon>
                                <TextBlock Text="ðŸ“"
                                           FontSize="12"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="ìƒˆ ìš”ì²­"
                                  Command="{Binding NewRequestCommand}">
                            <MenuItem.Icon>
                                <TextBlock Text="ðŸ“ƒ"
                                           FontSize="12"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </TreeView.ContextMenu>

                <TreeView.Resources>
                    <!-- TreeView Item Template -->
                    <HierarchicalDataTemplate DataType="{x:Type models:TreeViewItemModel}"
                                              ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <!-- í´ë” ì•„ì´ì½˜ -->
                            <TextBlock Text="ðŸ“"
                                       FontSize="14"
                                       Margin="0,0,5,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ItemType}"
                                                         Value="Folder">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- ìš”ì²­ ì•„ì´ì½˜ (ðŸ“ƒìœ¼ë¡œ ë³€ê²½) -->
                            <TextBlock Text="ðŸ“ƒ"
                                       FontSize="12"
                                       Margin="0,0,5,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility"
                                                Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ItemType}"
                                                         Value="Request">
                                                <Setter Property="Visibility"
                                                        Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- ì´ë¦„ í‘œì‹œ/íŽ¸ì§‘ -->
                            <Grid>
                                <!-- ì¼ë°˜ í…ìŠ¤íŠ¸ í‘œì‹œ -->
                                <TextBlock Text="{Binding Name}"
                                           FontSize="13"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground"
                                                    Value="#555555"/>
                                            <Setter Property="Visibility"
                                                    Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ItemType}"
                                                             Value="Folder">
                                                    <Setter Property="FontWeight"
                                                            Value="Bold"/>
                                                    <Setter Property="Foreground"
                                                            Value="#333333"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsEditing}"
                                                             Value="True">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- íŽ¸ì§‘ìš© í…ìŠ¤íŠ¸ë°•ìŠ¤ -->
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditing}"
                                                             Value="True">
                                                    <Setter Property="Visibility"
                                                            Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>

                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                             FontSize="12"
                                             Width="120"
                                             Height="20"
                                             VerticalAlignment="Center"
                                             x:Name="EditTextBox"
                                             KeyDown="EditTextBox_KeyDown"/>

                                    <Button Content="âœ“"
                                            Command="{Binding DataContext.SaveRenameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Width="20"
                                            Height="20"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Background="#4CAF50"
                                            Foreground="White"
                                            BorderThickness="0"
                                            ToolTip="ì €ìž¥"/>

                                    <Button Content="âœ—"
                                            Command="{Binding DataContext.CancelRenameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Width="20"
                                            Height="20"
                                            FontSize="10"
                                            Margin="2,0,0,0"
                                            Background="#F44336"
                                            Foreground="White"
                                            BorderThickness="0"
                                            ToolTip="ì·¨ì†Œ"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>

                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded"
                                Value="{Binding IsExpanded, Mode=TwoWay}"/>
                        <Setter Property="IsSelected"
                                Value="{Binding IsSelected, Mode=TwoWay}"/>
                        <Setter Property="FontSize"
                                Value="13"/>
                        <Setter Property="Padding"
                                Value="6"/>
                        <Setter Property="Margin"
                                Value="0,2"/>
                        <Setter Property="Background"
                                Value="Transparent"/>
                        <Setter Property="BorderBrush"
                                Value="Transparent"/>
                        <Setter Property="BorderThickness"
                                Value="1"/>
                        <Setter Property="AllowDrop"
                                Value="True"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TreeViewItem">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <ToggleButton x:Name="Expander"
                                                      IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                      Visibility="Visible"
                                                      Margin="0,0,6,0"
                                                      Grid.Row="0"
                                                      Grid.Column="0"
                                                      Focusable="False"
                                                      Cursor="Hand">
                                            <ToggleButton.Template>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Grid Width="16"
                                                          Height="16"
                                                          Background="Transparent">
                                                        <Path x:Name="ExpanderArrow"
                                                              Data="M 4 6 L 8 10 L 12 6"
                                                              StrokeThickness="1.6"
                                                              Stroke="#6B7280"
                                                              StrokeLineJoin="Round"
                                                              StrokeStartLineCap="Round"
                                                              StrokeEndLineCap="Round"/>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked"
                                                                 Value="True">
                                                            <Setter TargetName="ExpanderArrow"
                                                                    Property="Data"
                                                                    Value="M 4 10 L 8 6 L 12 10"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </ToggleButton.Template>
                                        </ToggleButton>

                                        <Border x:Name="Header"
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8">
                                            <ContentPresenter x:Name="PART_Header"
                                                              Margin="6,4"
                                                              ContentSource="Header"/>
                                        </Border>

                                        <ItemsPresenter x:Name="ItemsHost"
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        Margin="18,4,0,0"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsExpanded"
                                                 Value="False">
                                            <Setter TargetName="ItemsHost"
                                                    Property="Visibility"
                                                    Value="Collapsed"/>
                                        </Trigger>
                                        <Trigger Property="HasItems"
                                                 Value="False">
                                            <Setter TargetName="Expander"
                                                    Property="Visibility"
                                                    Value="Collapsed"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected"
                                                 Value="True">
                                            <Setter TargetName="Header"
                                                    Property="Background"
                                                    Value="{StaticResource SoftAccent}"/>
                                            <Setter TargetName="Header"
                                                    Property="BorderBrush"
                                                    Value="{StaticResource PrimaryColor}"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled"
                                                 Value="False">
                                            <Setter Property="Foreground"
                                                    Value="{StaticResource MutedText}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <EventSetter Event="MouseDoubleClick"
                                     Handler="TreeViewItem_MouseDoubleClick"/>
                        <EventSetter Event="PreviewMouseRightButtonDown"
                                     Handler="TreeViewItem_RightClick"/>
                        <EventSetter Event="Loaded"
                                     Handler="TreeViewItem_Loaded"/>
                        <EventSetter Event="PreviewMouseLeftButtonDown"
                                     Handler="TreeViewItem_PreviewMouseLeftButtonDown"/>
                        <EventSetter Event="PreviewMouseMove"
                                     Handler="TreeViewItem_PreviewMouseMove"/>
                        <EventSetter Event="DragOver"
                                     Handler="TreeViewItem_DragOver"/>
                        <EventSetter Event="Drop"
                                     Handler="TreeViewItem_Drop"/>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Grid>
    </Grid>
</UserControl>