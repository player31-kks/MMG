<UserControl x:Class="MMG.Views.API.RequestPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MMG"
             xmlns:models="clr-namespace:MMG.Models"
             xmlns:api="clr-namespace:MMG.Views.API"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="400">
    <Border Background="White"
            BorderBrush="#DDDDDD"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Connection Info -->
            <Border Grid.Row="0"
                    Background="#F8F9FA"
                    BorderBrush="#DDDDDD"
                    BorderThickness="0,0,0,1"
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>

                        <ColumnDefinition Width="*"
                                          MinWidth="80"/>

                        <ColumnDefinition Width="Auto"/>

                        <ColumnDefinition Width="Auto"
                                          MinWidth="70"/>

                        <ColumnDefinition Width="Auto"/>

                        <ColumnDefinition Width="Auto"
                                          MinWidth="60"/>

                        <ColumnDefinition Width="Auto"
                                          MinWidth="60"/>
                    </Grid.ColumnDefinitions>

                    <!-- Request Name -->
                    <TextBlock Grid.Row="0"
                               Grid.ColumnSpan="6"
                               Text="{Binding CurrentLoadedRequestName}"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="#2196F3"
                               Margin="8,0,0,8"
                               HorizontalAlignment="Left"/>

                    <!-- Connection Controls -->

                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Content="IP:"
                           VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Text="{Binding CurrentRequest.IpAddress}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,10,0"/>
                    <Label Grid.Row="1"
                           Grid.Column="2"
                           Content="Port:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                    <TextBox Grid.Row="1"
                             Grid.Column="3"
                             Text="{Binding CurrentRequest.Port}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,10,0"/>

                    <!-- Endian Toggle Button -->
                    <ToggleButton Grid.Row="1"
                                  Grid.Column="4"
                                  IsChecked="{Binding CurrentRequest.IsBigEndian}"
                                  ToolTip="바이트 순서 설정 (BigEndian/LittleEndian)"
                                  Margin="0,0,10,0"
                                  MinWidth="90"
                                  Height="30">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Background"
                                        Value="#FF5722"/>
                                <Setter Property="Foreground"
                                        Value="White"/>
                                <Setter Property="FontSize"
                                        Value="11"/>
                                <Setter Property="FontWeight"
                                        Value="Bold"/>
                                <Setter Property="BorderThickness"
                                        Value="0"/>
                                <Setter Property="Cursor"
                                        Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="4"
                                                    Padding="8,4">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsChecked"
                                            Value="True">
                                        <Setter Property="Background"
                                                Value="#FF5722"/>
                                        <Setter Property="Content"
                                                Value="Big Endian"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked"
                                            Value="False">
                                        <Setter Property="Background"
                                                Value="#2196F3"/>
                                        <Setter Property="Content"
                                                Value="Little Endian"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver"
                                            Value="True">
                                        <Setter Property="Opacity"
                                                Value="0.9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                    <Button Grid.Row="1"
                            Grid.Column="5"
                            Content="Send"
                            Command="{Binding SendCommand}"
                            Style="{StaticResource ModernButton}"
                            FontSize="{DynamicResource text-xs}"
                            FontWeight="Bold"
                            IsEnabled="{Binding IsSending, Converter={x:Static local:BooleanToInverseBooleanConverter.Instance}}"
                            Margin="0,0,10,0"/>

                    <Button Grid.Row="1"
                            Grid.Column="6"
                            Content="Save"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource SecondaryColor}"
                            FontSize="{DynamicResource text-xs}"
                            FontWeight="Bold"
                            IsEnabled="{Binding IsSending, Converter={x:Static local:BooleanToInverseBooleanConverter.Instance}}"
                            ToolTip="새 요청 저장 또는 기존 요청 업데이트"
                            Margin="0,0,5,0"/>
                </Grid>
            </Border>

            <!-- Request Content -->
            <TabControl Grid.Row="1"
                        Margin="20"
                        Style="{x:Null}">
                <!-- Request Schema Tab -->
                <TabItem Header="Request Schema"
                         Style="{StaticResource ModernTabItem}">
                    <api:RequestSchemaTabs Margin="10"/>
                </TabItem>

                <!-- Response Schema Tab -->
                <TabItem Header="Response Schema"
                         Style="{StaticResource ModernTabItem}">
                    <api:ResponseSchemaTabs Margin="10"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</UserControl>
