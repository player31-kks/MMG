<UserControl x:Class="MMG.Views.API.RequestPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MMG"
             xmlns:models="clr-namespace:MMG.Models"
             xmlns:api="clr-namespace:MMG.Views.API"
             xmlns:converters="clr-namespace:MMG.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="400">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Border Background="{StaticResource PanelBackground}"
            BorderBrush="{StaticResource MutedBorder}"
            BorderThickness="0"
            CornerRadius="12"
            Padding="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Connection Info -->
            <Border Grid.Row="0"
                    Background="{StaticResource SoftAccent}"
                    BorderBrush="{StaticResource MutedBorder}"
                    BorderThickness="0"
                    CornerRadius="10"
                    Padding="14"
                    Margin="0,0,0,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="80"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" MinWidth="70"/>
                        <ColumnDefinition Width="Auto" MinWidth="60"/>
                        <ColumnDefinition Width="Auto" MinWidth="60"/>
                    </Grid.ColumnDefinitions>

                    <!-- Request Name -->
                    <TextBlock Grid.Row="0"
                               Grid.ColumnSpan="6"
                               Text="{Binding CurrentLoadedRequestName}"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryColor}"
                               Margin="4,0,0,10"
                               HorizontalAlignment="Left"/>

                    <!-- Connection Controls -->
                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Content="IP"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource MutedText}"
                           FontWeight="SemiBold"
                           Margin="0,0,6,0"/>
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Text="{Binding CurrentRequest.IpAddress}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,12,0"/>
                    <Label Grid.Row="1"
                           Grid.Column="2"
                           Content="Port"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource MutedText}"
                           FontWeight="SemiBold"
                           Margin="0,0,12,0"/>
                    <TextBox Grid.Row="1"
                             Grid.Column="3"
                             Text="{Binding CurrentRequest.Port}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,12,0"/>

                    <Button Grid.Row="1"
                            Grid.Column="4"
                            Content="Send"
                            Command="{Binding SendCommand}"
                            Style="{StaticResource ModernButton}"
                            FontSize="{DynamicResource text-xs}"
                            FontWeight="Bold"
                            IsEnabled="{Binding IsSending, Converter={x:Static local:BooleanToInverseBooleanConverter.Instance}}"
                            Margin="0,0,6,0"
                            Padding="14,8"/>

                    <Button Grid.Row="1"
                            Grid.Column="5"
                            Content="Save"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource SecondaryColor}"
                            FontSize="{DynamicResource text-xs}"
                            FontWeight="Bold"
                            IsEnabled="{Binding IsSending, Converter={x:Static local:BooleanToInverseBooleanConverter.Instance}}"
                            ToolTip="새 요청 저장 또는 기존 요청 업데이트"
                            Margin="0,0,6,0"
                            Padding="14,8"/>
                </Grid>
            </Border>

            <!-- Request Content -->
            <TabControl Grid.Row="1"
                        Margin="8,0,8,8"
                        Style="{x:Null}">
                <!-- Request Schema Tab -->
                <TabItem Header="Request Schema"
                         Style="{StaticResource ModernTabItem}">
                    <api:RequestSchemaTabs Margin="10"/>
                </TabItem>

                <!-- Response Schema Tab -->
                <TabItem Header="Response Schema"
                         Style="{StaticResource ModernTabItem}">
                    <api:ResponseSchemaTabs Margin="10"/>
                </TabItem>

                <!-- Settings Tab -->
                <TabItem Header="Settings"
                         Style="{StaticResource ModernTabItem}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Margin="10">
                        <StackPanel>
                            <!-- Big Endian Setting -->
                            <Border Background="{StaticResource SoftAccent}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Use Big Endian byte order"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextPrimaryColor}"/>
                                        <TextBlock Text="Enable Big Endian byte ordering for multi-byte data types. When disabled, Little Endian is used."
                                                   FontSize="12"
                                                   Foreground="{StaticResource MutedText}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,16,0"/>
                                    </StackPanel>
                                    <ToggleButton Grid.Column="1"
                                                  IsChecked="{Binding CurrentRequest.IsBigEndian}"
                                                  VerticalAlignment="Center"
                                                  Width="50"
                                                  Height="26">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border x:Name="Track"
                                                                    Background="#E0E0E0"
                                                                    CornerRadius="13"
                                                                    Height="26"
                                                                    Width="50">
                                                                <Border x:Name="Thumb"
                                                                        Background="White"
                                                                        CornerRadius="11"
                                                                        Height="22"
                                                                        Width="22"
                                                                        HorizontalAlignment="Left"
                                                                        Margin="2,0,2,0"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="Track" Property="Background" Value="#4CAF50"/>
                                                                    <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <!-- Wait for Response Setting -->
                            <Border Background="{StaticResource SoftAccent}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Wait for response"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextPrimaryColor}"/>
                                        <TextBlock Text="Wait for a response after sending the request. When disabled, the request is sent without waiting for a reply."
                                                   FontSize="12"
                                                   Foreground="{StaticResource MutedText}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,16,0"/>
                                    </StackPanel>
                                    <ToggleButton Grid.Column="1"
                                                  IsChecked="{Binding CurrentRequest.WaitForResponse}"
                                                  VerticalAlignment="Center"
                                                  Width="50"
                                                  Height="26">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border x:Name="Track"
                                                                    Background="#E0E0E0"
                                                                    CornerRadius="13"
                                                                    Height="26"
                                                                    Width="50">
                                                                <Border x:Name="Thumb"
                                                                        Background="White"
                                                                        CornerRadius="11"
                                                                        Height="22"
                                                                        Width="22"
                                                                        HorizontalAlignment="Left"
                                                                        Margin="2,0,2,0"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="Track" Property="Background" Value="#4CAF50"/>
                                                                    <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <!-- Custom Local Port Setting -->
                            <Border Background="{StaticResource SoftAccent}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Column="0"
                                                Grid.Row="0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Use custom local port"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextPrimaryColor}"/>
                                        <TextBlock Text="Set a specific local port for this request. When disabled, the system will automatically assign a port."
                                                   FontSize="12"
                                                   Foreground="{StaticResource MutedText}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,16,0"/>
                                    </StackPanel>
                                    <ToggleButton Grid.Column="1"
                                                  Grid.Row="0"
                                                  IsChecked="{Binding CurrentRequest.UseCustomLocalPort}"
                                                  VerticalAlignment="Center"
                                                  Width="50"
                                                  Height="26">
                                        <ToggleButton.Style>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Border x:Name="Track"
                                                                    Background="#E0E0E0"
                                                                    CornerRadius="13"
                                                                    Height="26"
                                                                    Width="50">
                                                                <Border x:Name="Thumb"
                                                                        Background="White"
                                                                        CornerRadius="11"
                                                                        Height="22"
                                                                        Width="22"
                                                                        HorizontalAlignment="Left"
                                                                        Margin="2,0,2,0"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="Track" Property="Background" Value="#4CAF50"/>
                                                                    <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                    
                                    <!-- Port Input Field -->
                                    <StackPanel Grid.Column="0"
                                                Grid.ColumnSpan="2"
                                                Grid.Row="1"
                                                Orientation="Horizontal"
                                                Margin="0,12,0,0"
                                                Visibility="{Binding CurrentRequest.UseCustomLocalPort, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="Local Port:"
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextPrimaryColor}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,10,0"/>
                                        <TextBox Text="{Binding CurrentRequest.CustomLocalPort, UpdateSourceTrigger=PropertyChanged}"
                                                 Width="100"
                                                 Height="32"
                                                 VerticalContentAlignment="Center"
                                                 Padding="8,0"
                                                 FontSize="13"
                                                 Style="{StaticResource ModernTextBox}"/>
                                        <TextBlock Text="(1-65535)"
                                                   FontSize="11"
                                                   Foreground="{StaticResource MutedText}"
                                                   VerticalAlignment="Center"
                                                   Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</UserControl>
