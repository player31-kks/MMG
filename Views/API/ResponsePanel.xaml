<UserControl x:Class="MMG.Views.API.ResponsePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MMG"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="400">
    <Border Background="{StaticResource PanelBackground}"
            BorderBrush="{StaticResource MutedBorder}"
            BorderThickness="0"
            CornerRadius="12"
            Padding="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Response Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource SoftAccent}"
                    BorderBrush="{StaticResource MutedBorder}"
                    BorderThickness="0"
                    CornerRadius="10"
                    Padding="14"
                    Margin="0,0,0,8">
                <TextBlock Text="Response"
                           FontSize="{DynamicResource text-sm}"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryColor}"/>
            </Border>

            <!-- Response Content -->
            <ScrollViewer Grid.Row="1"
                          Margin="8,0,8,8"
                          VerticalScrollBarVisibility="Auto">
                <TextBox Text="{Binding ResponseText, Mode=OneWay}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Background="Transparent"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="{DynamicResource text-xs}"/>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
