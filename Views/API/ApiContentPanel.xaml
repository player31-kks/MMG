<UserControl x:Class="MMG.Views.API.ApiContentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:api="clr-namespace:MMG.Views.API"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"
                              MinWidth="250"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"
                              MinWidth="400"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="350"
                              MinWidth="300"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Saved Requests with modern styling -->
        <Border Grid.Column="0"
                Background="#F8F9FA"
                BorderBrush="#E9ECEF"
                BorderThickness="0,0,1,0">
            <api:SavedRequestsPanel DataContext="{Binding}"/>
        </Border>

        <!-- Splitter 1 -->
        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Width="1"
                      Background="#E9ECEF"
                      ShowsPreview="False"/>

        <!-- Middle Panel - Request with modern styling -->
        <Border Grid.Column="2"
                Background="White"
                Padding="20">
            <api:RequestPanel DataContext="{Binding}"/>
        </Border>

        <!-- Splitter 2 -->
        <GridSplitter Grid.Column="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Width="1"
                      Background="#E9ECEF"
                      ShowsPreview="False"/>

        <!-- Right Panel - Response with modern styling -->
        <Border Grid.Column="4"
                Background="#F8F9FA"
                BorderBrush="#E9ECEF"
                BorderThickness="1,0,0,0"
                Padding="20">
            <api:ResponsePanel DataContext="{Binding}"/>
        </Border>
    </Grid>
</UserControl>