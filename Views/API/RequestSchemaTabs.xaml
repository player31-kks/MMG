<UserControl x:Class="MMG.Views.API.RequestSchemaTabs"
             x:Name="RequestTabsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MMG"
             xmlns:models="clr-namespace:MMG.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="400">
    <TabControl Style="{x:Null}"
                BorderThickness="0,1,0,0">
        <!-- Headers Tab -->
        <TabItem Header="Headers"
                 Style="{StaticResource ModernTabItem}"
                 BorderThickness="0,1,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal">
                    <Button Content="Add Header"
                            Command="{Binding AddHeaderCommand}"
                            CommandParameter="{Binding ElementName=HeadersDataGrid, Path=SelectedIndex}"
                            Style="{StaticResource ModernButton}"
                            Width="80"
                            Height="30"/>
                    <TextBlock Text="{Binding HeaderBytesText}"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               Foreground="#007ACC"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          x:Name="HeadersDataGrid"
                          ItemsSource="{Binding CurrentRequest.Headers}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          KeyDown="DataGrid_KeyDown"
                          MouseLeftButtonUp="DataGrid_MouseLeftButtonUp"
                          Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"
                                            Binding="{Binding Name}"
                                            Width="2*"
                                            MinWidth="80"/>
                        <DataGridTemplateColumn Header="Type"
                                                Width="120"
                                                MinWidth="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox SelectedItem="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource ModernComboBox}"
                                              BorderThickness="0">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="models:DataType">
                                                <models:DataType>Byte</models:DataType>
                                                <models:DataType>UInt16</models:DataType>
                                                <models:DataType>Int</models:DataType>
                                                <models:DataType>UInt</models:DataType>
                                                <models:DataType>Float</models:DataType>
                                                <models:DataType>Padding</models:DataType>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Value"
                                            Binding="{Binding Value}"
                                            Width="2*"
                                            MinWidth="80"/>
                        <DataGridTemplateColumn Header=""
                                                Width="60"
                                                MinWidth="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✕"
                                            Command="{Binding ElementName=RequestTabsControl, Path=DataContext.RemoveHeaderCommand}"
                                            CommandParameter="{Binding}"
                                            Background="{StaticResource WarningColor}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Width="25"
                                            Height="25"
                                            FontSize="{DynamicResource text-xs}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Button Content="X"
                                            Command="{Binding DataContext.ClearAllHeadersCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Style="{StaticResource CancelButtonStyle}"
                                            Width="20"
                                            Height="20"
                                            FontSize="{DynamicResource text-xs}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>

        <!-- Payload Tab -->
        <TabItem Header="Payload"
                 Style="{StaticResource ModernTabItem}"
                 BorderThickness="0,1,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal">
                    <Button Content="Add Field"
                            Command="{Binding AddPayloadFieldCommand}"
                            CommandParameter="{Binding ElementName=PayloadDataGrid, Path=SelectedIndex}"
                            Style="{StaticResource ModernButton}"
                            Width="80"
                            Height="30"
                            HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding PayloadBytesText}"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"
                               Foreground="#007ACC"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          x:Name="PayloadDataGrid"
                          ItemsSource="{Binding CurrentRequest.Payload}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          KeyDown="DataGrid_KeyDown"
                          MouseLeftButtonUp="DataGrid_MouseLeftButtonUp"
                          Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name"
                                            Binding="{Binding Name}"
                                            Width="2*"
                                            MinWidth="80"/>
                        <DataGridTemplateColumn Header="Type"
                                                Width="120"
                                                MinWidth="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox SelectedItem="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource ModernComboBox}"
                                              BorderThickness="0">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="models:DataType">
                                                <models:DataType>Byte</models:DataType>
                                                <models:DataType>UInt16</models:DataType>
                                                <models:DataType>Int</models:DataType>
                                                <models:DataType>UInt</models:DataType>
                                                <models:DataType>Float</models:DataType>
                                                <models:DataType>Padding</models:DataType>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Value"
                                            Binding="{Binding Value}"
                                            Width="2*"
                                            MinWidth="80"/>
                        <DataGridTemplateColumn Header=""
                                                Width="60"
                                                MinWidth="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="✕"
                                            Command="{Binding ElementName=RequestTabsControl, Path=DataContext.RemovePayloadFieldCommand}"
                                            CommandParameter="{Binding}"
                                            Background="{StaticResource WarningColor}"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Width="25"
                                            Height="25"
                                            FontSize="{DynamicResource text-xs}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Button Content="X"
                                            Command="{Binding DataContext.ClearAllPayloadFieldsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Style="{StaticResource CancelButtonStyle}"
                                            Width="20"
                                            Height="20"
                                            FontSize="{DynamicResource text-xs}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
