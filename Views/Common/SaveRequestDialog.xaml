<Window x:Class="MMG.Views.Common.SaveRequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="요청 저장"
        Width="420"
        Height="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    <Border BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="8"
            Margin="5">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Content="요청 이름:"
                   FontSize="{DynamicResource text-sm}"
                   FontWeight="SemiBold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,10"/>

            <TextBox x:Name="RequestNameTextBox"
                     Grid.Row="1"
                     Height="35"
                     Margin="0,0,0,15"
                     Style="{StaticResource ModernTextBox}"/>

            <Label Grid.Row="2"
                   Content="저장할 폴더:"
                   FontSize="{DynamicResource text-sm}"
                   FontWeight="SemiBold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,10"/>

            <ComboBox x:Name="FolderComboBox"
                      Grid.Row="3"
                      Height="35"
                      Margin="0,0,0,15"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      Style="{StaticResource ModernComboBox}">
                <ComboBox.Items>
                    <ComboBoxItem Content="없음 (루트)"
                                  IsSelected="True"
                                  Tag="{x:Null}"/>
                </ComboBox.Items>
            </ComboBox>

            <StackPanel Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="SaveButton"
                        Content="저장"
                        Width="75"
                        Height="30"
                        Margin="0,0,10,0"
                        IsDefault="True"
                        Style="{StaticResource ModernButton}"
                        Background="{StaticResource SecondaryColor}"
                        Click="SaveButton_Click"/>

                <Button x:Name="CancelButton"
                        Content="취소"
                        Width="75"
                        Height="30"
                        IsCancel="True"
                        Style="{StaticResource ModernButton}"
                        Background="{StaticResource WarningColor}"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>