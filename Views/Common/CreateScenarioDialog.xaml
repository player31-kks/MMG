<Window x:Class="MMG.Views.Common.CreateScenarioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="새 시나리오 만들기"
        Height="320"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="새 테스트 시나리오 만들기"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <!-- Name Input -->
        <TextBlock Grid.Row="1"
                   Text="시나리오 이름:"
                   Margin="0,0,0,5"/>

        <TextBox Grid.Row="2"
                 x:Name="ScenarioNameTextBox"
                 Height="30"
                 Margin="0,0,0,10"
                 FontSize="14"/>

        <!-- Port Binding Setting -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <CheckBox x:Name="UseBindPortCheckBox"
                      Content="시나리오 포트 바인딩 사용"
                      Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal"
                        Margin="20,0,0,0"
                        IsEnabled="{Binding IsChecked, ElementName=UseBindPortCheckBox}">
                <TextBlock Text="바인드 포트:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBox x:Name="BindPortTextBox"
                         Width="80"
                         Height="28"
                         Text="0"
                         VerticalContentAlignment="Center"
                         Padding="5,0"/>
                <TextBlock Text="(0 = 자동 할당)"
                           VerticalAlignment="Center"
                           Foreground="Gray"
                           FontSize="11"
                           Margin="8,0,0,0"/>
            </StackPanel>
            <TextBlock Text="포트 바인딩을 사용하면 모든 스텝에서 동일한 로컬 포트로 송수신합니다."
                       FontSize="11"
                       Foreground="Gray"
                       Margin="0,5,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="취소"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Style="{StaticResource CancelButtonStyle}"
                    Click="Cancel_Click"/>
            <Button Content="생성"
                    Width="80"
                    Height="30"
                    Style="{StaticResource ConfirmationButtonStyle}"
                    Click="Create_Click"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>