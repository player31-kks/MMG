<Window x:Class="MMG.Views.CreateFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="새 폴더 만들기"
        Width="350"
        Height="150"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="폴더 이름:"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <TextBox Grid.Row="1"
                 x:Name="FolderNameTextBox"
                 Height="30"
                 Padding="10,5"
                 BorderBrush="#DDDDDD"
                 BorderThickness="1"
                 VerticalContentAlignment="Center"
                 Margin="0,0,0,15"/>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="취소"
                    Click="CancelButton_Click"
                    Width="70"
                    Height="30"
                    Margin="0,0,10,0"
                    Background="#F5F5F5"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"/>

            <Button Content="만들기"
                    Click="CreateButton_Click"
                    Width="70"
                    Height="30"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>