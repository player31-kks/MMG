<Window x:Class="MMG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMG"
        xmlns:models="clr-namespace:MMG.Models"
        xmlns:views="clr-namespace:MMG.Views"
        mc:Ignorable="d"
        Title="UDP Message Client"
        Height="900"
        Width="1400"
        MinHeight="600"
        MinWidth="1000"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <views:HeaderPanel Grid.Row="0"/>

        <!-- Main Content -->
        <Grid Grid.Row="1"
              Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"
                        MinWidth="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1.5*"
                        MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Request -->
            <views:RequestPanel Grid.Column="0"/>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          Background="#DDDDDD"/>

            <!-- Right Panel - Response -->
            <views:ResponsePanel Grid.Column="2"/>
        </Grid>
    </Grid>
</Window>
