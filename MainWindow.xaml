<Window x:Class="MMG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMG"
        xmlns:models="clr-namespace:MMG.Models"
        mc:Ignorable="d"
        Title="UDP Message Client"
        Height="800"
        Width="1200"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ModernButton"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#007ACC"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="10,5"/>
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#0086C7"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Background"
                                        Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox"
               TargetType="TextBox">
            <Setter Property="Padding"
                    Value="8"/>
            <Setter Property="BorderBrush"
                    Value="#DDDDDD"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused"
                                     Value="True">
                                <Setter Property="BorderBrush"
                                        Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox"
               TargetType="ComboBox">
            <Setter Property="Padding"
                    Value="8"/>
            <Setter Property="BorderBrush"
                    Value="#DDDDDD"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Background"
                    Value="White"/>
        </Style>

        <!-- Tab Style -->
        <Style x:Key="ModernTabItem"
               TargetType="TabItem">
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="15,8"/>
            <Setter Property="Margin"
                    Value="0,0,2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#DDDDDD"
                                BorderThickness="0,0,0,2">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter TargetName="Border"
                                        Property="BorderBrush"
                                        Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#DDDDDD"
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="UDP Message Client"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#333"/>
                <Rectangle Width="1"
                           Fill="#DDDDDD"
                           Margin="20,0"/>
                <TextBlock Text="Send UDP messages and parse responses"
                           FontSize="14"
                           Foreground="#666"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1"
              Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Request -->
            <Border Grid.Column="0"
                    Background="White"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Connection Info -->
                    <Border Grid.Row="0"
                            Background="#F8F9FA"
                            BorderBrush="#DDDDDD"
                            BorderThickness="0,0,0,1"
                            Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Text="UDP Request"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10"/>

                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   Content="IP:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding CurrentRequest.IpAddress}"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,10,0"/>
                            <Label Grid.Row="1"
                                   Grid.Column="2"
                                   Content="Port:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                            <TextBox Grid.Row="1"
                                     Grid.Column="3"
                                     Text="{Binding CurrentRequest.Port}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </Grid>
                    </Border>

                    <!-- Request Content -->
                    <TabControl Grid.Row="1"
                                Margin="20"
                                Style="{x:Null}">
                        <!-- Request Schema Tab -->
                        <TabItem Header="Request Schema"
                                 Style="{StaticResource ModernTabItem}">
                            <TabControl Margin="10"
                                    Style="{x:Null}">
                                <!-- Headers Tab -->
                                <TabItem Header="Headers"
                                         Style="{StaticResource ModernTabItem}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Button Grid.Row="0"
                                                Content="Add Header"
                                                Command="{Binding AddHeaderCommand}"
                                                Style="{StaticResource ModernButton}"
                                                HorizontalAlignment="Left"/>

                                        <DataGrid Grid.Row="1"
                                                  ItemsSource="{Binding CurrentRequest.Headers}"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  GridLinesVisibility="Horizontal"
                                                  HeadersVisibility="Column"
                                                  Margin="0,10,0,0">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Name"
                                                                    Binding="{Binding Name}"
                                                                    Width="*"/>
                                                <DataGridTemplateColumn Header="Type"
                                                                        Width="120">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <ComboBox SelectedItem="{Binding Type}"
                                                                      Style="{StaticResource ModernComboBox}"
                                                                      BorderThickness="0">
                                                                <ComboBox.ItemsSource>
                                                                    <x:Array Type="models:DataType">
                                                                        <models:DataType>Byte</models:DataType>
                                                                        <models:DataType>Int</models:DataType>
                                                                        <models:DataType>UInt</models:DataType>
                                                                        <models:DataType>Float</models:DataType>
                                                                    </x:Array>
                                                                </ComboBox.ItemsSource>
                                                            </ComboBox>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="Value"
                                                                    Binding="{Binding Value}"
                                                                    Width="*"/>
                                                <DataGridTemplateColumn Header=""
                                                                        Width="60">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Content="✕"
                                                                    Command="{Binding DataContext.RemoveHeaderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Background="#FF4444"
                                                                    Foreground="White"
                                                                    BorderThickness="0"
                                                                    Width="25"
                                                                    Height="25"
                                                                    FontSize="12"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </TabItem>

                                <!-- Payload Tab -->
                                <TabItem Header="Payload"
                                         Style="{StaticResource ModernTabItem}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Button Grid.Row="0"
                                                Content="Add Field"
                                                Command="{Binding AddPayloadFieldCommand}"
                                                Style="{StaticResource ModernButton}"
                                                HorizontalAlignment="Left"/>

                                        <DataGrid Grid.Row="1"
                                                  ItemsSource="{Binding CurrentRequest.Payload}"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  GridLinesVisibility="Horizontal"
                                                  HeadersVisibility="Column"
                                                  Margin="0,10,0,0">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Name"
                                                                    Binding="{Binding Name}"
                                                                    Width="*"/>
                                                <DataGridTemplateColumn Header="Type"
                                                                        Width="120">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <ComboBox SelectedItem="{Binding Type}"
                                                                      Style="{StaticResource ModernComboBox}"
                                                                      BorderThickness="0">
                                                                <ComboBox.ItemsSource>
                                                                    <x:Array Type="models:DataType">
                                                                        <models:DataType>Byte</models:DataType>
                                                                        <models:DataType>Int</models:DataType>
                                                                        <models:DataType>UInt</models:DataType>
                                                                        <models:DataType>Float</models:DataType>
                                                                    </x:Array>
                                                                </ComboBox.ItemsSource>
                                                            </ComboBox>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="Value"
                                                                    Binding="{Binding Value}"
                                                                    Width="*"/>
                                                <DataGridTemplateColumn Header=""
                                                                        Width="60">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Content="✕"
                                                                    Command="{Binding DataContext.RemovePayloadFieldCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Background="#FF4444"
                                                                    Foreground="White"
                                                                    BorderThickness="0"
                                                                    Width="25"
                                                                    Height="25"
                                                                    FontSize="12"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </TabItem>

                        <!-- Response Schema Tab -->
                        <TabItem Header="Response Schema"
                                 Style="{StaticResource ModernTabItem}">
                            <TabControl Margin="10"
                                    Style="{x:Null}">
                                <!-- Response Headers Tab -->
                                <TabItem Header="Headers"
                                         Style="{StaticResource ModernTabItem}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0"
                                                    Orientation="Horizontal">
                                            <Button Content="Add Header"
                                                    Command="{Binding AddResponseHeaderCommand}"
                                                    Style="{StaticResource ModernButton}"/>
                                            <TextBlock Text="Define response header parsing"
                                                       VerticalAlignment="Center"
                                                       Margin="15,0,0,0"
                                                       Foreground="#666"/>
                                        </StackPanel>

                                        <DataGrid Grid.Row="1"
                                                  ItemsSource="{Binding ResponseSchema.Headers}"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  GridLinesVisibility="Horizontal"
                                                  HeadersVisibility="Column"
                                                  Margin="0,10,0,0">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Field Name"
                                                                    Binding="{Binding Name}"
                                                                    Width="*"/>
                                                <DataGridTemplateColumn Header="Type"
                                                                        Width="120">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <ComboBox SelectedItem="{Binding Type}"
                                                                      Style="{StaticResource ModernComboBox}"
                                                                      BorderThickness="0">
                                                                <ComboBox.ItemsSource>
                                                                    <x:Array Type="models:DataType">
                                                                        <models:DataType>Byte</models:DataType>
                                                                        <models:DataType>Int</models:DataType>
                                                                        <models:DataType>UInt</models:DataType>
                                                                        <models:DataType>Float</models:DataType>
                                                                    </x:Array>
                                                                </ComboBox.ItemsSource>
                                                            </ComboBox>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTemplateColumn Header=""
                                                                        Width="60">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Content="✕"
                                                                    Command="{Binding DataContext.RemoveResponseHeaderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Background="#FF4444"
                                                                    Foreground="White"
                                                                    BorderThickness="0"
                                                                    Width="25"
                                                                    Height="25"
                                                                    FontSize="12"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </TabItem>

                                <!-- Response Payload Tab -->
                                <TabItem Header="Payload"
                                         Style="{StaticResource ModernTabItem}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0"
                                                    Orientation="Horizontal">
                                            <Button Content="Add Field"
                                                    Command="{Binding AddResponsePayloadFieldCommand}"
                                                    Style="{StaticResource ModernButton}"/>
                                            <TextBlock Text="Define response payload parsing"
                                                       VerticalAlignment="Center"
                                                       Margin="15,0,0,0"
                                                       Foreground="#666"/>
                                        </StackPanel>

                                        <DataGrid Grid.Row="1"
                                                  ItemsSource="{Binding ResponseSchema.Payload}"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  GridLinesVisibility="Horizontal"
                                                  HeadersVisibility="Column"
                                                  Margin="0,10,0,0">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Field Name"
                                                                    Binding="{Binding Name}"
                                                                    Width="*"/>
                                                <DataGridTemplateColumn Header="Type"
                                                                        Width="120">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <ComboBox SelectedItem="{Binding Type}"
                                                                      Style="{StaticResource ModernComboBox}"
                                                                      BorderThickness="0">
                                                                <ComboBox.ItemsSource>
                                                                    <x:Array Type="models:DataType">
                                                                        <models:DataType>Byte</models:DataType>
                                                                        <models:DataType>Int</models:DataType>
                                                                        <models:DataType>UInt</models:DataType>
                                                                        <models:DataType>Float</models:DataType>
                                                                    </x:Array>
                                                                </ComboBox.ItemsSource>
                                                            </ComboBox>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTemplateColumn Header=""
                                                                        Width="60">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Content="✕"
                                                                    Command="{Binding DataContext.RemoveResponsePayloadFieldCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"
                                                                    Background="#FF4444"
                                                                    Foreground="White"
                                                                    BorderThickness="0"
                                                                    Width="25"
                                                                    Height="25"
                                                                    FontSize="12"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </TabItem>
                    </TabControl>

                    <!-- Send Button -->
                    <Border Grid.Row="2"
                            Background="#F8F9FA"
                            BorderBrush="#DDDDDD"
                            BorderThickness="0,1,0,0"
                            Padding="20">
                        <Button Content="Send Request"
                                Command="{Binding SendCommand}"
                                Style="{StaticResource ModernButton}"
                                FontSize="14"
                                FontWeight="Bold"
                                Padding="20,10"
                                HorizontalAlignment="Center"
                                IsEnabled="{Binding IsSending, Converter={x:Static local:BooleanToInverseBooleanConverter.Instance}}"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          Background="#DDDDDD"/>

            <!-- Right Panel - Response -->
            <Border Grid.Column="2"
                    Background="White"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Response Header -->
                    <Border Grid.Row="0"
                            Background="#F8F9FA"
                            BorderBrush="#DDDDDD"
                            BorderThickness="0,0,0,1"
                            Padding="20">
                        <TextBlock Text="Response"
                                   FontSize="16"
                                   FontWeight="Bold"/>
                    </Border>

                    <!-- Response Content -->
                    <ScrollViewer Grid.Row="1"
                                  Margin="20"
                                  VerticalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding ResponseText, Mode=OneWay}"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
