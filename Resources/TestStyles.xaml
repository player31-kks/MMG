<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

        <!-- Test Panel Specific Styles -->

        <!-- Modern Card Style -->
        <Style x:Key="TestCard"
               TargetType="Border">
                <Setter Property="Background"
                        Value="White"/>
                <Setter Property="BorderBrush"
                        Value="#DEE2E6"/>
                <Setter Property="BorderThickness"
                        Value="1"/>
                <Setter Property="CornerRadius"
                        Value="6"/>
                <Setter Property="Padding"
                        Value="16"/>
                <Setter Property="Margin"
                        Value="0,0,0,12"/>
                <Style.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                                <Setter Property="BorderBrush"
                                        Value="#007BFF"/>
                                <Setter Property="Background"
                                        Value="#F0F7FF"/>
                        </Trigger>
                </Style.Triggers>
        </Style>

        <!-- Scenario List Item Style -->
        <Style x:Key="ScenarioListItem"
               TargetType="Border">
                <Setter Property="Background"
                        Value="White"/>
                <Setter Property="BorderBrush"
                        Value="#DEE2E6"/>
                <Setter Property="BorderThickness"
                        Value="1"/>
                <Setter Property="CornerRadius"
                        Value="4"/>
                <Setter Property="Padding"
                        Value="12"/>
                <Setter Property="Margin"
                        Value="0,4"/>
                <Setter Property="MinHeight"
                        Value="60"/>
                <Style.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                                <Setter Property="BorderBrush"
                                        Value="#007BFF"/>
                                <Setter Property="Background"
                                        Value="#F0F7FF"/>
                        </Trigger>
                </Style.Triggers>
        </Style>

        <!-- Small Icon Button Style -->
        <Style x:Key="SmallIconButton"
               TargetType="Button"
               BasedOn="{StaticResource ModernButton}">
                <Setter Property="Width"
                        Value="24"/>
                <Setter Property="Height"
                        Value="24"/>
                <Setter Property="FontSize"
                        Value="10"/>
                <Setter Property="Padding"
                        Value="2"/>
                <Setter Property="Margin"
                        Value="2"/>
        </Style>

        <!-- Status Indicator Ellipse -->
        <Style x:Key="StatusIndicator"
               TargetType="Ellipse">
                <Setter Property="Width"
                        Value="8"/>
                <Setter Property="Height"
                        Value="8"/>
                <Setter Property="Fill"
                        Value="#28A745"/>
                <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSuccess}"
                                     Value="False">
                                <Setter Property="Fill"
                                        Value="#DC3545"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsRunning}"
                                     Value="True">
                                <Setter Property="Fill"
                                        Value="#FFC107"/>
                        </DataTrigger>
                </Style.Triggers>
        </Style>

        <!-- Test Step Border Style -->
        <Style x:Key="TestStepBorder"
               TargetType="Border">
                <Setter Property="Background"
                        Value="White"/>
                <Setter Property="BorderBrush"
                        Value="#DEE2E6"/>
                <Setter Property="BorderThickness"
                        Value="1"/>
                <Setter Property="CornerRadius"
                        Value="6"/>
                <Setter Property="Padding"
                        Value="16"/>
                <Setter Property="Margin"
                        Value="0,0,0,12"/>
                <Setter Property="MinHeight"
                        Value="120"/>
                <Style.Triggers>
                        <DataTrigger Binding="{Binding IsRunning}"
                                     Value="True">
                                <Setter Property="BorderBrush"
                                        Value="#FFC107"/>
                                <Setter Property="Background"
                                        Value="#FFFBF0"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding LastResult.IsSuccess}"
                                     Value="True">
                                <Setter Property="BorderBrush"
                                        Value="#28A745"/>
                                <Setter Property="Background"
                                        Value="#F8FFF8"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding LastResult.IsSuccess}"
                                     Value="False">
                                <Setter Property="BorderBrush"
                                        Value="#DC3545"/>
                                <Setter Property="Background"
                                        Value="#FFF8F8"/>
                        </DataTrigger>
                </Style.Triggers>
        </Style>

        <!-- Panel Header Style -->
        <Style x:Key="PanelHeader"
               TargetType="Border">
                <Setter Property="Background"
                        Value="White"/>
                <Setter Property="BorderBrush"
                        Value="#DEE2E6"/>
                <Setter Property="BorderThickness"
                        Value="0,0,0,1"/>
                <Setter Property="Padding"
                        Value="15,15,15,10"/>
        </Style>

        <!-- Panel Footer Style -->
        <Style x:Key="PanelFooter"
               TargetType="Border">
                <Setter Property="Background"
                        Value="#F8F9FA"/>
                <Setter Property="BorderBrush"
                        Value="#DEE2E6"/>
                <Setter Property="BorderThickness"
                        Value="0,1,0,0"/>
                <Setter Property="Padding"
                        Value="20,12"/>
        </Style>

        <!-- Result Card Style -->
        <Style x:Key="ResultCard"
               TargetType="Border">
                <Setter Property="Background"
                        Value="#F8F9FA"/>
                <Setter Property="BorderBrush"
                        Value="#E9ECEF"/>
                <Setter Property="BorderThickness"
                        Value="1"/>
                <Setter Property="CornerRadius"
                        Value="4"/>
                <Setter Property="Padding"
                        Value="10"/>
                <Setter Property="Margin"
                        Value="0,0,0,6"/>
        </Style>

        <!-- Step Number Badge Style -->
        <Style x:Key="StepNumberBadge"
               TargetType="Border">
                <Setter Property="Background"
                        Value="#007BFF"/>
                <Setter Property="CornerRadius"
                        Value="12"/>
                <Setter Property="Width"
                        Value="24"/>
                <Setter Property="Height"
                        Value="24"/>
                <Setter Property="Margin"
                        Value="0,0,10,0"/>
        </Style>

        <!-- Progress Bar Styles -->
        <Style x:Key="ModernProgressBar"
               TargetType="ProgressBar">
                <Setter Property="Height"
                        Value="3"/>
                <Setter Property="Background"
                        Value="#E9ECEF"/>
                <Setter Property="Foreground"
                        Value="#007BFF"/>
                <Setter Property="BorderThickness"
                        Value="0"/>
                <Setter Property="Template">
                        <Setter.Value>
                                <ControlTemplate TargetType="ProgressBar">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="1.5">
                                                <Rectangle Name="PART_Track"
                                                           Fill="{TemplateBinding Foreground}"/>
                                        </Border>
                                </ControlTemplate>
                        </Setter.Value>
                </Setter>
        </Style>

        <!-- Clickable Test Step Button Style -->
        <Style x:Key="ClickableTestStep"
                        TargetType="Button">
                <Setter Property="Background"
                                Value="Transparent"/>
                <Setter Property="BorderThickness"
                                Value="0"/>
                <Setter Property="Padding"
                                Value="0"/>
                <Setter Property="Margin"
                                Value="0,0,0,12"/>
                <Setter Property="HorizontalContentAlignment"
                                Value="Stretch"/>
                <Setter Property="VerticalContentAlignment"
                                Value="Stretch"/>
                <Setter Property="Cursor"
                                Value="Hand"/>
                <Setter Property="Template">
                        <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                        <Border x:Name="StepBorder"
                                                        Style="{StaticResource TestStepBorder}">
                                                <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                                Value="True">
                                                        <Setter TargetName="StepBorder"
                                                                        Property="BorderBrush"
                                                                        Value="#007BFF"/>
                                                        <Setter TargetName="StepBorder"
                                                                        Property="Background"
                                                                        Value="#F0F7FF"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed"
                                                                Value="True">
                                                        <Setter TargetName="StepBorder"
                                                                        Property="BorderBrush"
                                                                        Value="#0056b3"/>
                                                        <Setter TargetName="StepBorder"
                                                                        Property="Background"
                                                                        Value="#E3F2FD"/>
                                                </Trigger>
                                        </ControlTemplate.Triggers>
                                </ControlTemplate>
                        </Setter.Value>
                </Setter>
        </Style>

</ResourceDictionary>